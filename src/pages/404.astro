---
import Layout from "../layouts/Layout.astro";
import { Button } from "@/components/ui/button";
import "../styles/global.css";
---

<Layout title="404 - Page Not Found | AniMatch">
  <div
    class="min-h-screen bg-gradient-to-br from-blue-900 via-purple-900 to-indigo-900 flex items-center justify-center p-4"
  >
    <div
      class="max-w-md w-full bg-white/10 backdrop-blur-sm rounded-lg p-8 text-center shadow-xl border border-white/20"
    >
      <h1
        class="text-4xl md:text-5xl font-bold text-white mb-4 bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent"
      >
        404
      </h1>
      <h2 class="text-2xl md:text-3xl font-semibold text-white mb-6">
        Page Not Found
      </h2>
      <p class="text-blue-200 mb-8">
        Sorry, the page you're looking for doesn't exist or has been moved.
      </p>
      <Button
        client:load
        className="bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white px-8 py-3 rounded-md font-medium transition-all duration-300"
      >
        <a href="/">Back to Home</a>
      </Button>
    </div>
  </div>
</Layout>
